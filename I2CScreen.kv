<ReadLanePopup@Popup>
    title: "Read Lane"
    auto_dismiss: True
    size_hint: .5, 1

    lane_name: ''
    data: ''

    BoxLayout:
        canvas.before:
            Color:
                rgb: 245/255, 245/255, 245/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        spacing: 5
        padding: 5

        Label:
            size_hint: 1, .2
            text: root.lane_name

        ScrollView:
            id:scroller
            bar_width: 25
            effect_cls: "ScrollEffect"
            scroll_type: ['bars']
            TextInput:
                size_hint_y: None
                height: max(self.minimum_height, scroller.height)
                font_name: 'RobotoMono-Regular.ttf'
                text: root.data

<WriteAllPopup@Popup>
    title: "Write All to Default"
    text: ''
    size_hint: .6, .4
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: root.text
        Button:
            text: 'Okay'
            on_release: root.dismiss()
            size_hint: 1, .50

<BitRecycleViewRow@TextInput>:
    text: ''

<BitRecycleView@RecycleView>:
    viewclass: 'BitRecycleViewRow'
    bar_width: 20
    bar_length: 50
    bar_color: 1, 1, 1, 1
    bar_inactive_color: 230/255, 230/255, 230/255, 1
    effect_cls: "ScrollEffect"
    scroll_type: ['bars']

    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<I2CScreen>:
    id: i2c_screen
    i2c_tabbed_panel: i2c_tabbed_panel
    bit_recycle_view: bit_recycle_view

    ActionBar:
        pos_hint: {'top':1}
        size_hint_y: .075
        ActionView:
            canvas.before:
                Color:
                    rgb: 220/255, 220/255, 220/255
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            use_separator: True

            ActionPrevious:
                color: 0, 0, 0, 1
                title: '    I2C Tool'
                with_previous: False

            ActionButton:
                text: "Menu"
                on_press: root.manager.current = 'menu_screen'

            ActionSeparator:

            ActionButton:
                text: "LUT"
                on_press: root.open_lut_popup()

            ActionSeparator:

            ActionButton:
                text: "Read"
                on_press: i2c_screen.open_single_read()

            ActionButton:
                text: "Write"
                on_press: i2c_screen.open_single_write()

            ActionSeparator:

            ActionButton:
                text: "Read All"
                on_press: i2c_screen.open_read_lane()

            ActionButton:
                text: "Write All"
                on_press: i2c_screen.open_write_lane()

            ActionSeparator:

            ActionButton:
                text: "Load Scripts"
                on_press: i2c_screen.open_load_script()

            ActionButton:
                text: "Run Script"
                on_press: i2c_screen.open_run_script()

    BoxLayout:
        size_hint: 1, .925
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TabbedPanel:
            id: i2c_tabbed_panel
            background_disabled_image: 'white.png'
            background_image: 'white.png'
            do_default_tab: False

        BitRecycleView:
            canvas.before:
                Color:
                    rgb: 245/255, 245/255, 245/255
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            id: bit_recycle_view
            size_hint: 1, .45

