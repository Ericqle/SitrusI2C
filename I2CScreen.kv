<I2cWritePopup@Popup>:
    title: "Write"
    size_hint: .5, .3
    auto_dismiss: False
    value_text_input: value_text_input
    address: ''

    BoxLayout:
        canvas.before:
            Color:
                rgb: 230/255, 230/255, 230/255
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height

        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Label:
                text: 'Data(HEX): '

            TextInput:
                id: value_text_input

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

            Button:
                text: 'Write'
                on_press:
                    app.root.get_screen("i2c_screen").write(root.address ,value_text_input.text)
                    root.dismiss()

<I2cSingleReadPopup@Popup>:
    title: "Read"
    size_hint: .5, .4
    auto_dismiss: False

    BoxLayout:
        canvas.before:
            Color:
                rgb: 230/255, 230/255, 230/255
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height

        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Label:
                text: 'Address: '

            TextInput:
                id: address_text_input

        Label:
            id: reg_data_label
            text: ''

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Button:
                text: 'Close'
                on_press: root.dismiss()

            Button:
                text: 'Read'
                on_press:
                    reg_data_label.text = app.root.get_screen("i2c_screen").single_read(address_text_input.text)

<I2cSingleWritePopup@Popup>:
