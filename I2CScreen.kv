<I2cWritePopup@Popup>:
    title: "Write"
    size_hint: .5, .35
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Label:
                text: 'Data(HEX): '
            TextInput:

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Button:
                text: 'Cancel'
                on_press: root.dismiss()
            Button:
                text: 'Write'
                on_press:
                    # INSERT WRITE FUNCTION
                    root.dismiss()

<I2CScreen>:
    id: i2c_screen
    i2c_tabbed_panel: i2c_tabbed_panel

    ActionBar:
        pos_hint: {'top':1}
        size_hint_y: .075
        ActionView:
            use_separator: True

            ActionPrevious:
                title: 'I2C Tool'
                with_previous: False

            ActionButton:
                text: "Menu"
                on_press: root.manager.current = 'menu_screen'

            ActionGroup:
                text: 'Script'
                mode: 'spinner'
                ActionButton:
                    text: "Load Scripts"

                ActionButton:
                    text: "Run Script"

    BoxLayout:
        size_hint: 1, .925
        orientation: 'vertical'
        padding: 5
        spacing: 5

        TabbedPanel:
            id: i2c_tabbed_panel
            do_default_tab: False

        RstDocument:
            size_hint: 1, .5
