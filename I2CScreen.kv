            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height

        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, .8
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Label:
