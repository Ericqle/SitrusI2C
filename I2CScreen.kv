<I2cWritePopup@Popup>:
    title: "Write"
    size_hint: .5, .35
    auto_dismiss: False

    BoxLayout:
        canvas.before:
            Color:
                rgb: 175/255, 175/255, 175/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Label:
                text: 'Data(HEX): '

            TextInput:

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

            Button:
                text: 'Write'
                on_press:
                    # INSERT WRITE FUNCTION
                    root.dismiss()

<I2cLoadScriptPopup@Popup>:
    title: "Load Script"
    auto_dismiss: True
    size_hint: .75, 1

    BoxLayout:
        canvas.before:
            Color:
                rgb: 175/255, 175/255, 175/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        spacing: 25
        padding: 25

        TextInput:
            id: script_file_text_input
            text: script_file_chooser.selection and script_file_chooser.selection[0] or ''
            size_hint: 1, .2

        FileChooserListView:
            id: script_file_chooser
            path: '/users/eric/Desktop/'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            size_hint: 1, .2

            Button:
                text: 'Cancel'
                on_press:
                    root.dismiss()
            Button:
                text: 'Load'
                on_press:
                    # INSERT LOAD SCRIPT
                    root.dismiss()

<I2cScriptRecycleViewRow@BoxLayout>:
    orientation: 'horizontal'
    Button:
        text: 'Address'

<I2cRunScriptPopup@Popup>:
    title: "Run Script"
    auto_dismiss: True
    size_hint: .75, 1

    BoxLayout:
        canvas.before:
            Color:
                rgb: 175/255, 175/255, 175/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        spacing: 25
        padding: 25

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            size_hint: 1, .2

            BoxLayout:
                orientation: 'vertical'

                RecycleView:
                    viewclass: 'I2cScriptRecycleViewRow'
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'

                Button:
                    text: 'Cancel'
                    size_hint: 1, .25
                    on_press:
                        root.dismiss()

            BoxLayout:
                orientation: 'vertical'

                RstDocument:

                Button:
                    text: 'Run'
                    size_hint: 1, .25
                    on_press:
                        # INSERT LOAD SCRIPT
                        root.dismiss()

<BitRecycleViewRow@Label>:
    text: ''
    text_size: self.width, None
    size_hint: 1, None
    #height: self.texture_size[1]

<BitRecycleView@RecycleView>:
    viewclass: 'BitRecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(30)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<I2CScreen>:
    id: i2c_screen
    i2c_tabbed_panel: i2c_tabbed_panel
    bit_recycle_view: bit_recycle_view

    canvas.before:
        Color:
            rgb: 175/255, 175/255, 175/255
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        pos_hint: {'top':1}
        size_hint_y: .075
        ActionView:
            canvas.before:
                Color:
                    rgb: 150/255, 150/255, 150/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            use_separator: True

            ActionPrevious:
                title: 'I2C Tool'
                with_previous: False

            ActionButton:
                text: "Menu"
                on_press: root.manager.current = 'menu_screen'

            ActionGroup:
                text: 'Script'
                mode: 'spinner'

                ActionButton:
                    text: "Load Scripts"
                    on_press: i2c_screen.open_load_script()

                ActionButton:
                    text: "Run Script"
                    on_press: i2c_screen.open_run_script()

    BoxLayout:
        size_hint: 1, .925
        orientation: 'vertical'
        padding: 5
        spacing: 5

        TabbedPanel:
            id: i2c_tabbed_panel
            do_default_tab: False

        BitRecycleView:
            id: bit_recycle_view

