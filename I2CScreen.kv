<I2cWritePopup@Popup>:
    title: "Write"
    size_hint: .5, .35
    auto_dismiss: False
    value_text_input: value_text_input
    address: ''

    BoxLayout:
        canvas.before:
            Color:
                rgb: 160/255, 160/255, 160/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Label:
                text: 'Data(HEX): '

            TextInput:
                id: value_text_input

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

            Button:
                text: 'Write'
                on_press:
                    app.root.get_screen("i2c_screen").write(root.address ,value_text_input.text)
                    root.dismiss()

<ReadLanePopup@Popup>
    title: "Read Lane"
    auto_dismiss: True
    size_hint: .5, 1

    lane_name: ''
    data: ''

    BoxLayout:
        canvas.before:
            Color:
                rgb: 175/255, 175/255, 175/255
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        spacing: 5
        padding: 5

        Label:
            size_hint: 1, .2
            text: root.lane_name

        TextInput:
            text: root.data

<BitRecycleViewRow@Label>:
    text: ''
    text_size: self.width, None
    size_hint: 1, None
    #height: self.texture_size[1]

<BitRecycleView@RecycleView>:
    viewclass: 'BitRecycleViewRow'
    bar_width: 20
    bar_length: 50
    bar_color: 1, 1, 1, 1
    bar_inactive_color: 160/255, 160/255, 160/255, 1
    effect_cls: "ScrollEffect"
    scroll_type: ['bars']

    RecycleBoxLayout:
        default_size: None, dp(30)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<I2CScreen>:
    id: i2c_screen
    i2c_tabbed_panel: i2c_tabbed_panel
    bit_recycle_view: bit_recycle_view

    canvas.before:
        Color:
            rgb: 175/255, 175/255, 175/255
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        pos_hint: {'top':1}
        size_hint_y: .075
        ActionView:
            canvas.before:
                Color:
                    rgb: 150/255, 150/255, 150/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            use_separator: True

            ActionPrevious:
                title: 'I2C Tool'
                with_previous: False

            ActionButton:
                text: "Read Lane"
                on_press: i2c_screen.open_read_lane()

            ActionButton:
                text: "Menu"
                on_press: root.manager.current = 'menu_screen'

            ActionGroup:
                text: 'Script'
                mode: 'spinner'

                ActionButton:
                    text: "Load Scripts"
                    on_press: i2c_screen.open_load_script()

                ActionButton:
                    text: "Run Script"
                    on_press: i2c_screen.open_run_script()

    BoxLayout:
        size_hint: 1, .925
        orientation: 'vertical'
        padding: 5
        spacing: 5

        TabbedPanel:
            id: i2c_tabbed_panel
            do_default_tab: False

        BitRecycleView:
            id: bit_recycle_view
            size_hint: 1, .45

