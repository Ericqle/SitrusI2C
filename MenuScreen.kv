<ScrollableLabel@ScrollView>:
    text: ''
    Label:
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text

<MenuScreen>:
    id: menu_screen
    loaded_lanes_label: loaded_lanes_label
    config_file_chooser: config_file_chooser
    config_file_text_input: config_file_text_input

    canvas.before:
        Color:
            rgb: 175/255, 175/255, 175/255
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        padding: 25
        spacing: 25

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 160/255, 160/255, 160/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            spacing: 5
            padding: 5

            TextInput:
                id: config_file_text_input
                text: config_file_chooser.selection and config_file_chooser.selection[0] or ''
                size_hint: 1, .2

            FileChooserListView:
                id: config_file_chooser
                path: '/users/eric/Downloads/'

            Button:
                size_hint: 1, .2
                text: 'Load Config'
                on_press: root.load_lane()

        BoxLayout:
            orientation: 'vertical'

            Label:
                canvas.before:
                    Color:
                        rgb: 160/255, 160/255, 160/255
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_size: '16sp'
                text: "Loaded Lanes"
                size_hint: 1, .2

            ScrollableLabel:
                id: loaded_lanes_label
                canvas.before:
                    Color:
                        rgb: 165/255, 165/255, 165/255
                    Rectangle:
                        pos: self.pos
                        size: self.size
                markup: 'True'
                size_hint: 1, .8

            Button:
                size_hint: 1, .2
                text: 'Continue'
                on_press: root.swap_to_i2c_screen()