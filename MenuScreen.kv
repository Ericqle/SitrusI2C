<ConfigRecycleViewRow@Label>:
    text: ''
    color: 1, 1, 1, 1

<ConfigRecycleView@RecycleView>:
    viewclass: 'ConfigRecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(30)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<MenuScreen>:
    id: menu_screen
    loaded_lanes_recycle_view: loaded_lanes_recycle_view
    config_file_chooser: config_file_chooser
    config_file_text_input: config_file_text_input

    canvas.before:
        Color:
            rgb: 175/255, 175/255, 175/255
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        padding: 25
        spacing: 25

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 160/255, 160/255, 160/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            spacing: 5
            padding: 5

            TextInput:
                id: config_file_text_input
                text: config_file_chooser.selection and config_file_chooser.selection[0] or ''
                size_hint: 1, .2

            FileChooserListView:
                id: config_file_chooser
                path: '/users/eric/Downloads/'

            Button:
                size_hint: 1, .2
                text: 'Load Config'
                on_press: root.load_lane()

        BoxLayout:
            orientation: 'vertical'

            Label:
                canvas.before:
                    Color:
                        rgb: 160/255, 160/255, 160/255
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_size: '16sp'
                text: "Loaded Lanes"
                size_hint: 1, .2

            ConfigRecycleView:
                id: loaded_lanes_recycle_view
                size_hint: 1, .8

            Button:
                size_hint: 1, .2
                text: 'Continue'
                on_press: root.swap_to_i2c_screen()