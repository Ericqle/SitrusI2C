<LutPopup>:
    pam1: pam1
    pam2: pam2
    a: a
    b: b
    c: c
    calc: calc
    scale: scale
    lut_text: lut_text

    size_hint: .8, .8
    title: "LUT"

    BoxLayout:
        canvas.before:
            Color:
                rgb: 245/255, 245/255, 245/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 5
        spacing: 5

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'horizontal'
            size_hint: 1, .3
            padding: 5
            spacing: 5

            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'PAM Inner Binary Weights'
                BoxLayout:
                    size_hint: .7, 1
                    pos_hint: {'x': .25}
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: '1: '
                    TextInput:
                        multiline: False
                        id: pam1
                    Label:
                        text: '2: '
                    TextInput:
                        multiline: False
                        id: pam2
            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'Coefficients'
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: 'A: '
                    TextInput:
                        multiline: False
                        id: a
                    Label:
                        text: 'B: '
                    TextInput:
                        multiline: False
                        id: b
                    Label:
                        text: 'C: '
                    TextInput:
                        multiline: False
                        id: c

            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'Scale Factor'
                BoxLayout:
                    size_hint: .5, 1
                    pos_hint: {'x': .25}
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: '(0 to 1): '
                    TextInput:
                        multiline: False
                        size_hint: .3, 1
                        id: scale
                        text: ''

        BoxLayout:
            padding: 5
            spacing: 5
            size_hint: 1, .15
            orientation: 'horizontal'

            Button:
                id: calc
                text: "Calc Look up Table"
                on_press:
                    root.calc_lut()

            Button:
                text: "Make LUT Script"
                on_press:
                    app.root.get_screen("i2c_screen").create_load_lut_script(start_address.text, root.script_values)
            Label:
                text: "LSB Address:"
            TextInput:
                id: start_address
                text: '0x018e'

        ScrollView:
            id: scroller
            bar_width: 25
            effect_cls: "ScrollEffect"
            scroll_type: ['bars']
            TextInput:
                id: lut_text
                size_hint_y: None
                height: max(self.minimum_height, scroller.height)

<ErrorPopup@Popup>:
    title: "Error"
    text: ''
    size_hint: .6, .4
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: root.text
        Button:
            text: 'Okay'
            on_release: root.dismiss()
            size_hint: 1, .50

<NoticePopup@Popup>:
    title: "Notice"
    text: ''
    size_hint: .6, .4
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: root.text
        Button:
            text: 'Okay'
            on_release: root.dismiss()
            size_hint: 1, .50

<ConfirmtaionWritePopup@Popup>:
    title: "Confirm"
    lane: ''
    size_hint: .5, .3
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: 'Write All Addresses in ' + root.lane + ' to Default Values'


        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5

            Button:
                text: 'Cancel'
                on_press: root.dismiss()
            Button:
                text: 'Write All'
                on_press:
                    app.root.get_screen("i2c_screen").open_write_lane()
                    root.dismiss()
