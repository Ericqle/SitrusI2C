<ErrorPopup@Popup>:
    title: "Error"
    text: ''
    size_hint: .6, .4
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: root.text
        Button:
            text: 'Okay'
            on_release: root.dismiss()
            size_hint: 1, .50